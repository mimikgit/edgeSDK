{
  "name": "mimik-sample-app",
  "productName": "mimik Sample App",
  "description": "mimik Sample App demonstrating mimik container manager",
  "version": "2.0.0",
  "private": true,
  "author": "mimik technology inc. <info@mimik.com> (https://mimik.com)",
  "copyright": "Â© 2019, mimik technology inc.",
  "homepage": "https://mimik.com",
  "main": "app/background.js",
  "build": {
    "appId": "com.mimik.sample-app",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "resources/containers/",
        "to": "containers/"
      }
    ],
    "directories": {
      "buildResources": "resources"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "executableName": "MimikSampleApp"
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "test": "npm run unit",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "package": "webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "eslint": "^4.19.1",
    "fs-jetpack": "^1.3.1",
    "query-string": "^6.1.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "simple-jsonrpc-js": "0.0.10",
    "ws": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.47",
    "@babel/preset-env": "^7.0.0-beta.47",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "chai": "^4.2.0",
    "css-loader": "^0.28.11",
    "electron": "2.0.2",
    "electron-builder": "^20.14.7",
    "electron-mocha": "^6.0.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^5.2.0",
    "source-map-support": "^0.5.6",
    "spectron": "^4.0.0",
    "style-loader": "^0.21.0",
    "webpack": "^3.12.0",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "devEngines": {
    "node": ">=8.x",
    "npm": ">=5.7"
  }
}
